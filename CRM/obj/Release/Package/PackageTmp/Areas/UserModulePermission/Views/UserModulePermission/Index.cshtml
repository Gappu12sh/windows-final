<input id="hdnModules" type="hidden" value="@ViewBag.Modules" />
<input id="hdnUsers" type="hidden" value="@ViewBag.Users" />
<input type="hidden" value="ViewUserModulePermissionDetails" id="hdnPageLoadOption" />
<div class="modal fade" id="modal-lg" data-backdrop='static' data-keyboard='false'>
    <div class="modal-dialog modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header GradientModelHeader">
                <h4 class="modal-title" id="header" style="color:black">Add Permission</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color:black">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <input style="display:none" type="text" id="txtUserModulePermissionId">
            <div class="modal-body">

                <div class="row">
                    <div class="col-sm-6" id="users">
                        <div class="form-group">
                            <label>User<span style="color:#dc3545">*</span></label>
                            <select class="select2" style="width:100%" id="ddlUsers" data-select2-id="1" onchange="GetPermissions(this)"></select>
                        </div>
                    </div>
                </div>
                <div class="row" id="dvPermission" style="display:none">
                    <div class="col-sm-12" >
                        <!-- text input -->
                        <div class="table-responsive">
                            <table id="tblPermissionData" class="table table-bordered table-hover table-striped GradientdataTable" role="grid" aria-describedby="tblPermissionData_info">

                                <thead>

                                </thead>
                                <tbody id="tblPermissionDataBody"></tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<div class="modal fade" id="modal-permission" data-backdrop='static' data-keyboard='false'>
    <div class="modal-dialog modal-dialog-scrollable modal-sm">
        <div class="modal-content">
            <div class="modal-header GradientModelHeader">
                <h4 class="modal-title" id="header" style="color:black">Add Permission</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color:black">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <input style="display:none" type="text" id="txtModuleId">
            <div class="modal-body">              
                <div class="row" id="dvPermission">
                    <div class="col-sm-12">
                        <!-- text input -->
                        <div class="table-responsive">
                            <table id="tblPermData" class="table table-bordered table-hover table-striped GradientdataTable" role="grid" aria-describedby="tblPermData_info">
                                <thead>

                                </thead>
                                <tbody id="tblPermDataBody"></tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-secondary Gradientbutton" id="btnUpdatePermission"onclick="btnUpdatePermission()">Update</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card Gradientcard-outline">
            <div class="card-header" id="dvAddButton">
                <h3 class="card-title">UserModulePermission List</h3><button type="submit" class="btn btn-secondary Gradientbutton" id="btnAddUserModulePermission" style="float:right;font-weight:bold;">Manage Permissions</button>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tblUserModulePermissionData" style="width:100%" class="table table-bordered table-hover GradientdataTable" role="grid" aria-describedby="tblUserModulePermissionData_info">
                        <thead>

                        </thead>
                        <tbody id="tblUserModulePermissionDataBody"></tbody>
