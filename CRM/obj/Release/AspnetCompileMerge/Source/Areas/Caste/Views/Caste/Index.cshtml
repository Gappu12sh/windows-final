<input type="hidden" id="hiddenUnitId" value="@ViewBag.UserInfo.Emp_CompanyId" />*@
<input type="hidden" value="ViewCasteDetails" id="hdnPageLoadOption" />
<div class="modal fade" id="modal-lg" data-backdrop='static' data-keyboard='false'>
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="border-top: 3px solid #007bff">
                <h4 class="modal-title" id="header" style="color:black">Add Caste</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color:black">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <input style="display:none" type="text" id="Caste_ID">
            <div class="modal-body">

                <div class="row">
                    <div class="col-sm-4">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Caste Full Description</label>
                            <input type="text" class="form-control" placeholder="Enter ..." id="txtCasteFullDescription">
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Caste Short Description</label>
                            <input type="text" class="form-control" placeholder="Enter ..." id="txtCasteShortDescription">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-secondary" style="background: linear-gradient(to right, rgb(31, 162, 255), rgb(18, 216, 250))" id="btnSave" onclick="SaveCaste()">Save</button>
                <button type="button" class="btn btn-secondary" id="btnUpdate" style="display:none;background: linear-gradient(to right, rgb(31, 162, 255), rgb(18, 216, 250))" onclick="UpdateCaste()">Update</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Caste List</h3><button type="submit" class="btn btn-secondary" id="btnAddCaste" style="float:right;font-weight:bold;background: linear-gradient(to right, rgb(31, 162, 255), rgb(18, 216, 250))">+</button>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="tblCasteData" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="tblCasteData_info">
                    <thead>

                    </thead>
                    <tbody id="tblCasteDataBody"></tbody>
